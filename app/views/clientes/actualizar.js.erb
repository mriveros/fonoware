<% if @cliente_ok.present? %>

   $("<div class='col-sm-12' id='msg-editar-cliente' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-cliente");
   
  $("#form_buscar_clientes_id").val('<%= @cliente.id %>');
  $("#form_buscar_clientes_razon_social").val('');
  $("#form_buscar_clientes_nombre").val('');
  $("#form_buscar_clientes_apellido").val('');
  $("#form_buscar_clientes_direccion").val('');
  $("#form_buscar_clientes_telefono").val('');
  setTimeout(function(){ $("#<%= params[:window_id]%>").modal('hide'); $("#form-buscar-clientes").submit(); }, 3000);

<% else %>

  $("<div class='col-sm-12' id='msg-editar-cliente' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-editar-cliente");

<% end %>
