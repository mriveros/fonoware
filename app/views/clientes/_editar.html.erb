
<div class="modal-dialog" style="text-align:left;">
      
  <div class="modal-content">
        
    <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Editar Cliente</h4>
      
    </div>

    <%= form_for @cliente, remote: true, url: clientes_actualizar_url, html: { id: "form-editar-cliente" }, method: 'POST' do |f| %>

      <%= hidden_field_tag :window_id, params[:window_id]%>
      <%= hidden_field_tag :cliente_id, params[:id]%>

      <div class="modal-body">

        <div class="panel-body">

          <div class="col-sm-4"><%= f.label :razon_social, "Razón Social".html_safe %></div>
           <div class="col-sm-7"><%= f.text_field :razon_social, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />
          <div class="col-sm-1"></div><br />

           <div class="col-sm-4"><%= f.label :ruc, "RUC".html_safe %></div>
           <div class="col-sm-7"><%= f.text_field :ruc, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />
          <div class="col-sm-1"></div><br />
          

          <div class="col-sm-4"><%= f.label :nombre, "Nombres #{attr_requerido}".html_safe %></div>
           <div class="col-sm-7"><%= f.text_field :cliente_nombre, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />
           <div class="col-sm-1"></div><br />
          
          <div class="col-sm-4"><%= f.label :apellido, "Apellidos #{attr_requerido}".html_safe %></div>
           <div class="col-sm-7"><%= f.text_field :cliente_apellido, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />
           <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :direccion, "Dirección #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :direccion, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />
           <div class="col-sm-1"></div><br />

          <div class="col-sm-4"><%= f.label :telefono, "Teléfono #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :telefono, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />   
           <div class="col-sm-1"></div><br /> 
       
      </div>

      <div class="modal-footer" style="background:#e6e6e6;">
        <%= link_to "<span class='glyphicon glyphicon-remove'></span> Cerrar".html_safe, "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
        <%= f.submit "Guardar".html_safe, class: "btn btn-primary", id: "btn-guardar-cliente" %>          
      </div>

    <% end %>

  </div>
</div>

<style type="text/css">

  #form-editar-flota label, #form-editar-flota input[type='text'], #form-editar-flota select { float:left; margin-top:5px;}
  #form-editar-flota br {clear:both; }
  #form-editar-flota label { width:200px;font-size:12px;margin-top:10px;}


</style>

<script type="text/javascript">
  aplicar_datepicker2();
</script>
