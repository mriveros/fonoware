<% if @detalle_debito_ok.present? %>

   $("<div class='col-sm-12' id='msg-editar-detalle-debito' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-detalle-debito");
   
  $("#form_buscar_detalles_debitos_id").val('<%= @detalle_debito.id %>');
  $("#form_buscar_detalles_debitos_descripcion").val('');
  setTimeout(function(){ $("#<%= params[:window_id]%>").modal('hide'); $("#form-buscar-detalles-debitos").submit(); }, 3000);

<% else %>

  $("<div class='col-sm-12' id='msg-editar-detalle-debito' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-editar-detalle-debito");

<% end %>
