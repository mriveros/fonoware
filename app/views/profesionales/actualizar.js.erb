<% if @persona_ok.present? %>

   $("<div class='col-sm-12' id='msg-editar-profesional' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-profesional");
   
  $("#form_buscar_profesional_id").val('<%= @profesional.id %>');
  $("#form_buscar_profesional_documento").val('');
  $("#form_buscar_profesional_nombre").val('');
  $("#form_buscar_profesional_apellido").val('');
  $("#form_buscar_profesional_direccion").val('');
  $("#form_buscar_profesional_telefono").val('');
  setTimeout(function(){ 
    
    $("#<%= params[:window_id]%>").modal('hide'); 
    $("#form-buscar-profesional").submit(); 
    swal("Guardado Exitosamente.");
    
  }, 2000);

<% else %>

  $("<div class='col-sm-12' id='msg-editar-profesional' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-editar-profesional");

<% end %>
