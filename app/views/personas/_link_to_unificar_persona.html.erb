<%= link_to "<i class='glyphicon glyphicon-file'></i>".html_safe, "#", id: "link-to-mostrar-formulario-#{persona.id}", class: 'btn btn-success btn-xs', title: 'Haga click para Unificar Datos de esta Persona' %>

<script type="text/javascript">
  $("#link-to-mostrar-formulario-<%= persona.id%>").bind('click', function(){
    
    var contenido = $.trim($("#mostrar-formulario-<%= persona.id%>").html());
   
  $(".mostrar-formulario").html('');
   
  if(contenido.length == 0){
      
    $(this).parent().parent().after("<tr id='mostrar-formulario-<%= persona.id%>' class='mostrar-formulario'><td colspan='10' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")
      
      $.ajax({
        type: 'GET',
        url: '<%= url_for(personas_mostrar_formulario_path) %>',  
        data: { persona_id: <%=persona.id%>},
        dataType: 'script'
        
      })

    }
    
    return false;
  })

</script>
