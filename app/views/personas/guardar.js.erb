<% if @persona_ok %>

   $("<div class='col-sm-12' id='msg-agregar-persona' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-persona");
   
  $("#form_buscar_personas_id").val('<%= @persona.id %>');
  $("#form_buscar_personas_nacionalidad_id").val('');
  $("#form_buscar_personas_tipo_documento_id").val('');
  $("#form_buscar_personas_documento_persona").val('');
  $("#form_buscar_personas_nombre_persona").val('');
  $("#form_buscar_personas_apellido_persona").val('');
  $("#form_buscar_personas_fecha_nacimiento").val('');
  $("#form_buscar_personas_sexo").val('');
  $("#form-buscar-personas").submit();
  setTimeout(function(){ $("#<%= params[:window_id]%>").modal('hide'); }, 3000);

<% else %>

    $("<div class='col-sm-12' id='msg-agregar-persona' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-agregar-persona");

<% end %>
