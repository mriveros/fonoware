<% if @eliminado %>

   $("<div class='col-sm-12' id='msg-eliminar-persona' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Eliminado exitosamente.</div>").insertBefore("#table-personas");
   $("#form-buscar-personas").submit();
    setTimeout(function(){ $("#msg-eliminar-persona").remove(); }, 3000);

<% else %>

  $("<div class='col-sm-12' id='msg-eliminar-persona' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg).html_safe %></div>").insertBefore("#table-personas");
  setTimeout(function(){ $("#msg-eliminar-persona").remove(); }, 3000);

<% end %>
