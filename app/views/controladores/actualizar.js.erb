<% if @controlador_ok.present? %>

   $("<div class='col-sm-12' id='msg-editar-controlador' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-controlador");
   
  $("#form_buscar_controladores_id").val('<%= @controlador.id %>');
  $("#form_buscar_controladores_descripcion").val(''); 
  setTimeout(function(){ $("#<%= params[:window_id]%>").modal('hide'); $("#form-buscar-controladores").submit(); }, 3000);

<% else %>

  $("<div class='col-sm-12' id='msg-editar-controlador' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= @msg.html_safe %></div>").insertBefore("#form-editar-controlador");

<% end %>
