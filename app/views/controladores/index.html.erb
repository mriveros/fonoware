<%= javascript_include_tag "modulos/controladores.js" %>
<div>
<!--
  <div class="pull-right btn-lg hidden-xs" id="start-tour"><a title="Ir a la ayuda"><i class="icon-py-ayuda"></i> Ayuda</a></div>
-->
  <div class="col-sm-12" style="border-bottom: 2px solid #b6b6b6;margin-bottom:5px;padding:0px;">
    <h3 style="float:left;margin-top:5px;">Controladores</h3>
    <%= link_to "<i class='glyphicon glyphicon-plus-sign'></i> agregar".html_safe, "#", id: "link-to-agregar-controlador", class: "btn btn-primary pull-right", style: "float:right;" %>
  </div>
</div>

<div style="clear:both;"></div>
 
<div class="table-responsive" id="table-controladores">
  <table class="table table-small-font table-bordered table-striped">
  
    <%= form_tag controladores_lista_path, remote: true, id: "form-buscar-controladores" do  %>
 
      <thead>
        <tr>

          <th style="width:100px;">
            <span>ID</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_controladores_id, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-controladores', '#form_buscar_controladores_id');"><i class="fa fa-times"></i></span>
            </div>
          </th>

          <th>
            <span>Controlador</span>
            <div class="input-group input-group-sm">
              <%= text_field_tag :form_buscar_controladores_descripcion, nil, :class => 'form-control', :placeholder => "" %>
              <span class="input-group-addon limpiar" onclick="quitar_filtro('#form-buscar-controladores', '#form_buscar_controladores_descripcion');"><i class="fa fa-times"></i></span>
            </div>
          </th>

          <th style="width:50%;"></th>
          <th></th>

        </tr>
      
      </thead>

    <% end %>

    <tbody id="controladores-lista"></tbody>
  
  </table>

</div>


<table class="table table-striped table-bordered table-hover">
  <tbody id="controladores-footer"></tbody>
</table>

<%= modal_window( window_id: "modal-window-agregar-controlador", link_to_id: "#link-to-agregar-controlador", url: controladores_agregar_path( window_id: "modal-window-agregar-controlador") )%>

<script type="text/javascript">

  //---------------------------- RECUPERANDO DATOS ----------------------------//
  $("#form-buscar-controladores").bind("submit", function () {

    $("#controladores-lista").html("<%= escape_javascript("<tr><td colspan='4' style='text-align:center;'>#{image_tag('ajax-loader0.gif')}</td></tr>").html_safe %>")

  })
  //---------------------------------------------------------------------------//
  //---------------------------- BUSCAR CONTROLADORES -------------------------//
  $("#table-controladores .table-bordered input").bind('change', function () {

      $.ajaxQ.abortAll();
      $("#form-buscar-controladores").submit();

  })
  //----------------------------------------------------------------------------//
  //----------------------------INICIO -----------------------------------------//
  $("#form-buscar-controladores").submit();
  //----------------------------------------------------------------------------//
</script>

<script>

</script>

