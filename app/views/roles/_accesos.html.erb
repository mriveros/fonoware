<td colspan="5">

  <div style="background: #e6e6e6; margin:15px;padding:15px;border-radius:10px;">

    <div>

      <div class="col-sm-12" style="border-bottom: 2px dashed #b6b6b6;margin-bottom:5px;padding:0px;">
        <h3 style="float:left;margin-top:5px;">Accesos</h3>
        <%= link_to "<i class='glyphicon glyphicon-plus-sign'></i> agregar".html_safe, "#", id: "link-to-agregar-acceso", class: "btn btn-primary btn-xs", style: "float:right;" %>
      </div>

    </div>

    <div style="clear:both;"></div>
   
    <div class="panel-body">
      
      <div class="table-responsive" id="table-accesos">
          
        <table class="table table-bordered table-hover table-striped display dataTable" aria-describedby="example_info">
            
          <thead>
              
            <tr role="row">
              
              <th>ID</th>
              <th>Controlador</th>
              <th>Acci√≥n</th>
              <th style='text-align:right;'></th>
              
            </tr>
            
          </thead>
       
          <tbody id="accesos-lista">

            <% if @accesos.present? %>
            
              <% @accesos.each do |a|%>

                <tr>
                  <td><%= a.id %></td>
                  <td><%= a.accion.controlador.descripcion if a.accion && a.accion.controlador %></td>
                  <td><%= a.accion.descripcion if a.accion %></td>
                  <td style="width: 50px;text-align:right;">
                    <%= link_to "<i class='glyphicon glyphicon-remove'></i>".html_safe, roles_eliminar_acceso_path(:id => a.id), remote: true, class: 'btn btn-danger btn-xs', title: "Haga click para eliminar el acceso", data: {confirm: 'Esta seguro de eliminar este acceso ?'} %>
                  </td>

                </tr>

              <% end %>

            <% else %>

              <tr><td colspan=4>No se han encontrado datos.</td></tr>

            <% end %>
                
          </tbody>
              
        </table>
        
      </div>
      
    </div>
    
  </div>

  <%= modal_window( window_id: "modal-window-agregar-acceso", link_to_id: "#link-to-agregar-acceso", url: roles_agregar_acceso_path( window_id: "modal-window-agregar-acceso", rol_id: params[:rol_id]) )%>

</td>
