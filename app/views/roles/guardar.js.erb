<% if @rol_ok.present? %>

   $("<div class='col-sm-12' id='msg-agregar-rol' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-rol");
   
  $("#form_buscar_roles_id").val('<%= @rol.id %>');
  $("#form_buscar_roles_descripcion").val('');
  $("#form-buscar-roles").submit();
  setTimeout(function(){ $("#<%= params[:window_id]%>").modal('hide'); }, 3000);

<% else %>

  $("<div class='col-sm-12' id='msg-agregar-rol' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= @msg.html_safe %></div>").insertBefore("#form-agregar-rol");

<% end %>
