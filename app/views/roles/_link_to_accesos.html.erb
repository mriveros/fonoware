<%= link_to "<i class='glyphicon glyphicon-th-list'></i>".html_safe, "#", id: "link-to-accesos-#{rol.id}", class: 'btn btn-info btn-xs', title: 'Haga click para ver los accesos.' %>

<script type="text/javascript">

  $("#link-to-accesos-<%= rol.id %>").bind('click', function(){

    var contenido = $.trim($("#accesos-<%= rol.id %>").html());

    $(".accesos").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='accesos-<%= rol.id %>' class='accesos'><td colspan='4' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(roles_accesos_path) %>',  
        data: { rol_id: <%= rol.id %>},
        dataType: 'script'
        
      })

    }
    
    return false;
  })

</script>

