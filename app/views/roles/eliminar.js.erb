<% if @eliminado %>

   $("<div class='col-sm-12' id='msg-eliminar-rol' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Eliminado exitosamente.</div>").insertBefore("#table-roles");
   $("#form-buscar-roles").submit();
    setTimeout(function(){ $("#msg-eliminar-rol").remove(); }, 3000);

<% else %>

  $("<div class='col-sm-12' id='msg-eliminar-rol' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'>No se ha podido eliminar el rol.</div>").insertBefore("#table-roles");
  setTimeout(function(){ $("#msg-eliminar-rol").remove(); }, 3000);

<% end %>
