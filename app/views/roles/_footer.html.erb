<% if roles.present? %>

  <tr id="tab-paginacion">
    <td colspan="4" style="text-align:center;"><div class="flickr_pagination"><%= ajax_will_paginate roles, :params => params %></div></td>
  </tr>

  <tr id="tab-cantidad-registros" style="background:#e6e6e6;">
    <td colspan="4">Cantidad de registros encontrados: <%= @total_encontrados %> de <%= @total_registros %></td>
  </tr>

<% end %>
