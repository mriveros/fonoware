<% if flotas.present? %>

  <% flotas.each do |fl| %>

    <tr>

      <td style="width:50px;"><%= fl.id %></td>
      <td><%= fl.codigo_flota%></td>
      <td><%= fl.marca.descripcion%></td>
      <td><%= fl.modelo %></td>
      <td><%= fl.chapa %></td>
      <td style="width:120px;"><%= fl.descripcion%></td>
      <td style="width:120px;"> 

        <%= link_to_editar_flota(fl) %>
        
        <%= link_to icon_eliminar, flotas_eliminar_path(id: fl.id), remote: true, class: "btn btn-danger btn-xs", title: 'Haga click para eliminar el camión', data: { confirm: "Está seguro de eliminar el camión ?"} %>
       
         
       </td>

     
     

      </td>

    </tr>

  <% end %>

<tr id="tab-paginacion">

    <td colspan="12" style="text-align:center;"><div class="flickr_pagination"><%= ajax_will_paginate flotas, :params => params %></div></td>
</tr>

<tr>
    <td colspan="12">
      Cantidad de registros encontrados: <%= @total_encontrados %> 
    </td>
</tr>

 

<% else %>

  <tr>

    <td colspan="12"><p class='none-result'>No se han encontrado resultados.</p></td>

  </tr>


<% end %>
