<% if @flota_ok.present? %>

   $("<div class='col-sm-12' id='msg-editar-flota' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-flota");
   
  $("#form_buscar_flotas_id").val('<%= @flota.id %>');
  $("#form_buscar_flotas_codigo").val('');
  $("#form_buscar_flotas_marca_id").val('');
  $("#form_buscar_flotas_modelo").val('');
  $("#form_buscar_flotas_chapa").val('');
  $("#form_buscar_flotas_descripcion").val('');
  setTimeout(function(){ $("#<%= params[:window_id]%>").modal('hide'); $("#form-buscar-flotas").submit(); }, 3000);

<% else %>

  $("<div class='col-sm-12' id='msg-editar-persona' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-editar-flota");

<% end %>
