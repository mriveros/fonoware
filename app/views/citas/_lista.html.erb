<% if citas.present? %>

  <% citas.each do |cit| %>

    <tr>

      <td><%= cit.cita_id %></td>
      <td><%= cit.fecha_cita.strftime('%d/%m/%Y')%></td>
      <td><%= cit.paciente_documento.to_s.reverse.gsub(/...(?=.)/,'\&.').reverse%></td>
      <td><%= cit.paciente_nombre%></td>
      <td><%= cit.paciente_apellido%></td>
      <td><%= cit.tipo_consulta%></td>
      <td><%= cit.precio.to_s.reverse.gsub(/...(?=.)/,'\&.').reverse %></td>
      <td><%= cit.estado_cita%></td>

      <td style="width:120px;"> 

        <%= link_to_editar_cita(cit) %>
        
        <%= link_to icon_eliminar,"#", onclick: "eliminar_registro(#{cit.cita_id});return false;", class: "btn btn-danger btn-xs", id: "btn-eliminar-cita", title: 'Haga click para eliminarla cita'  %>
       
       <%#= link_to icon_confirmar,"#", onclick: "marcar_predeterminado(#{cit.cita_id});return false;", class: "btn btn-success btn-xs", id: "btn-marcar-predeterminado", title: 'Haga click para marcar este precio como predeterminado.'  %>
         
       </td>

     
     

      </td>

    </tr>

  <% end %>

<tr id="tab-paginacion">

    <td colspan="12" style="text-align:center;"><div class="flickr_pagination"><%= ajax_will_paginate citas, :params => params %></div></td>
</tr>

<tr>
    <td colspan="12">
      Cantidad de registros encontrados: <%= @total_encontrados %> 
    </td>
</tr>

 

<% else %>

  <tr>

    <td colspan="12"><p class='none-result'>No se han encontrado resultados.</p></td>

  </tr>


<% end %>


<script type="text/javascript">

  function eliminar_registro(cita_id) {

        swal({
          title: "Confirmar",
          text: "Al confirmar se eliminará permanentemente de la lista de citas",
          type: "warning",
          showCancelButton: true,
          confirmButtonClass: "btn-confirm",
          confirmButtonText: "Confirmar",
          cancelButtonText: "Cancelar",
          closeOnConfirm: true,
          closeOnCancel: true
        },
        function(isConfirm) {
          if (isConfirm) {

              $.ajax({
                url: "<%= url_for(citas_eliminar_path) %>", 
                data: {id: cita_id},
                dataType: 'script'
              });
            
          } else{

            return false;

          }

        });

    
    }

    function marcar_predeterminado(precio_id) {

        swal({
          title: "Confirmar",
          text: "Al confirmar este precio como predeterminado éste quedara como principal al crear una cita.",
          type: "warning",
          showCancelButton: true,
          confirmButtonClass: "btn-confirm",
          confirmButtonText: "Confirmar",
          cancelButtonText: "Cancelar",
          closeOnConfirm: true,
          closeOnCancel: true
        },
        function(isConfirm) {
          if (isConfirm) {

              $.ajax({
                url: "<%= url_for(precios_marcar_predeterminado_path) %>", 
                data: {id: precio_id},
                dataType: 'script'
              });
            
          } else{

            return false;

          }

        });

    
    }

</script>
