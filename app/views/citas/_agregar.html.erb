
<div class="modal-dialog">
      
  <div class="modal-content">
        
    <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Agregar Precio</h4>
      
    </div>

    <%= form_for @precio, remote: true, url: precios_guardar_url, html: { id: "form-agregar-precio" }, method: 'POST' do |f| %>

      <%= hidden_field_tag :window_id, params[:window_id]%>

      <div class="modal-body">

        <div class="panel-body">

          <div class="col-sm-4"><%= f.label :codigo, "Código Precio #{attr_requerido}".html_safe %></div>
           <div class="col-sm-7"><%= f.text_field :codigo, class: 'form-control input-sm',style:"text-transform:uppercase;", maxlength: "6" %></div>
          <div class="col-sm-1"></div><br />

           <div class="col-sm-4"><%= f.label :descripcion, "Descripción #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :descripcion, class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />  

          <div class="col-sm-4"><%= f.label :monto, "Monto #{attr_requerido}".html_safe %></div>
          <div class="col-sm-7"><%= f.text_field :monto, :onkeyup=>' formatear_numero(this)', class: 'form-control input-sm',style:"text-transform:uppercase;" %></div>
          <div class="col-sm-1"></div><br />

           
       
      </div>

      <div class="modal-footer" style="background:#e6e6e6;">
        <%= link_to "<span class='glyphicon glyphicon-remove'></span> Cerrar".html_safe, "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
        <%= f.submit "Guardar".html_safe, class: "btn btn-primary", id: "btn-guardar-precio" %>          
      </div>

    <% end %>

  </div>
  
</div>

<style type="text/css">

  #form-agregar-precio label, #form-agregar-precio input[type='text'], #form-agregar-precio select { float:left; margin-top:5px;}
  #form-agregar-precio br {clear:both; }
  #form-agregar-precio label { width:200px;font-size:12px;margin-top:10px;}
  #form-agregar-precio #marca { width:60%;}
  #form-agregar-precio #modelo { width:60%;}
  #form-agregar-precio #chapa { width:50%;}
  #form-agregar-precio #descripcion { width:50%;}
  

</style>

<script type="text/javascript">

  aplicar_datepicker2();

</script>
