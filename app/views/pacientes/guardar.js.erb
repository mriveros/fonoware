<% if @guardado_ok %>

   $("<div class='col-sm-12' id='msg-agregar-cliente' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-cliente");
   
  $("#form_buscar_clientes_id").val('<%= @cliente.id %>');
  $("#form_buscar_clientes_razon_social").val('');
  $("#form_buscar_clientes_nombre").val('');
  $("#form_buscar_clientes_apellido").val('');
  $("#form_buscar_clientes_direccion").val('');
  $("#form_buscar_clientes_telefono").val('');
  $("#form-buscar-clientes").submit();
  swal("Guardado Exitosamente.")
  setTimeout(function(){ $("#<%= params[:window_id]%>").modal('hide'); }, 3000);


<% else %>
	swal("Error al guardar:" + "<%=j(@msg)%>")
    $("<div class='col-sm-12' id='msg-agregar-clientes' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-agregar-clientes");

<% end %>
