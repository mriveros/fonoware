<% if @persona_ok.present? %>

   $("<div class='col-sm-12' id='msg-editar-persona' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Actualizado Exitosamente.</div>").insertBefore("#form-editar-persona");
   
  $("#form_buscar_pacientes_id").val('<%= @paciente.id %>');
  $("#form_buscar_pacientes_razon_social").val('');
  $("#form_buscar_pacientes_nombre").val('');
  $("#form_buscar_pacientes_apellido").val('');
  $("#form_buscar_pacientes_direccion").val('');
  $("#form_buscar_pacientes_telefono").val('');
  setTimeout(function(){ 
    
    $("#<%= params[:window_id]%>").modal('hide'); 
    $("#form-buscar-pacientes").submit(); 
    swal("Guardado Exitosamente.");

  }, 3000);

<% else %>

  $("<div class='col-sm-12' id='msg-editar-cliente' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-editar-persona");

<% end %>
