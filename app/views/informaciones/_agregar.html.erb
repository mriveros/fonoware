<%= javascript_include_tag "modulos/usuarios.js" %>
<div class="modal-dialog" style = "width:60%; align-content: center;">
      
  <div class="modal-content">
        
    <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Agregar</h4>
      
    </div>

    <%= form_for @informacion, remote: true, url: informaciones_guardar_url, html: { id: "form-agregar-usuario" }, method: 'POST' do |f| %>

      <%= hidden_field_tag :window_id, params[:window_id]%>

      <div class="modal-body">

        <div class="panel-body">
			
		  <div class="col-sm-4"><%= label_tag nil, "Titulo #{attr_requerido}".html_safe, id: "lbl-titulo" %></div>
          <div class="col-sm-7"><%= text_field_tag :titulo, nil, class: 'form-control input-sm' %></div>
          <div class="col-sm-1"></div><br /><br />
		  
		  <div class="col-sm-4"><%= label_tag nil, "Descripción #{attr_requerido}".html_safe, id: "lbl-descripcion" %></div>
          <div class="col-sm-8"><%= text_area_tag :descripcion,nil, class: 'form-control input-sm', style: "width:87%;" %></div><br /><br />
		  
		  
		
	      <div class="col-sm-4"><%= label_tag nil, "Fecha Publicación #{attr_requerido}".html_safe, id: "lbl-fecha" %></div>
                <div class="col-sm-8">
                    <div class="input-group date" , style="width:26%;">
                      <%= f.text_field :fecha_publicacion, :value => @informacion.fecha_publicacion.present? ? @informacion.fecha_publicacion.strftime('%d/%m/%Y') : nil ,:size => 8, :class => 'form-control input-sm' %>
                      <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                    </div>
				
				</div>

          <div class="col-md-1"></div><br /><br />
		  

        </div>        
       
      </div>

      <div class="modal-footer" style="background:#e6e6e6;">

        <%= link_to "Cerrar", "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
        <%= f.submit "Guardar", class: "btn btn-primary", id: "btn-guardar-usuario" %>
          
      </div>

    <% end %>

  </div>
  
</div>

<style type="text/css">

  #form-agregar-usuario label, #form-agregar-usuario input[type='text'], #form-agregar-usuario input[type='password'], #form-agregar-usuario select , #form-agregar-usuario input[type='checkbox']{ float:left; margin-top:5px;}
  #form-agregar-usuario br {clear:both; }
  #form-agregar-usuario label { width:200px;font-size:12px;margin-top:10px;}
  #form-agregar-usuario #persona_tipo_documento_persona_id { width:60%;}
  #form-agregar-usuario #persona_nacionalidad_id { width:60%;}
  #form-agregar-usuario #persona_documento { width:50%;}
  #form-agregar-usuario #usuario_password { width:60%;}
  #form-agregar-usuario #usuario_password_confirmation { width:60%;}
  #form-agregar-usuario #notificar_usuario { width:10%;}


</style>

<script type="text/javascript">
  aplicar_datepicker();

  setTimeout(function(){ 
    $("#titulo").focus();
    $("#persona_tipo_documento_id").val(1);
    $("#persona_nacionalidad_id").val(1);
  }, 1000);

 
</script>
