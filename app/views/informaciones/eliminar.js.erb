<% if @eliminado %>

   $("<div class='col-sm-12' id='msg-eliminar-usuario' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Eliminado exitosamente.</div>").insertBefore("#table-informaciones");
   $("#form-buscar-informaciones").submit();
    setTimeout(function(){ $("#msg-eliminar-informaciones").remove(); }, 3000);

<% else %>

  $("<div class='col-sm-12' id='msg-eliminar-usuario' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= @msg.html_safe %></div>").insertBefore("#table-informaciones");
  setTimeout(function(){ $("#msg-eliminar-informaciones").remove(); }, 3000);

<% end %>
