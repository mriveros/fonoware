<%= javascript_include_tag "modulos/usuarios.js" %>
<div class="modal-dialog" style = "width:60%; align-content: center;">
      
  <div class="modal-content">
        
    <div class="modal-header" style="background:#e6e6e6;">
          
      <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
      <h4 class="modal-title" id="myModalLabel">Editar Informaci贸n</h4>
      
    </div>

    <%= form_for @informacion, remote: true, url: informaciones_actualizar_url, html: { id: "form-editar-informacion" }, method: 'POST' do |f| %>

      <%= f.hidden_field :id %>
      <%= hidden_field_tag :window_id, params[:window_id]%>

      <div class="modal-body">

        <div class="panel-body">

          <div class="col-sm-4"><%= label_tag nil, "Titulo #{attr_requerido}".html_safe, id: "lbl-titulo" %></div>
          <div class="col-sm-7"><%= text_field_tag :titulo, nil, class: 'form-control input-sm' %></div>
          <div class="col-sm-1"></div><br /><br />
		  
		  <div class="col-sm-4"><%= label_tag nil, "Descripci贸n #{attr_requerido}".html_safe, id: "lbl-descripcion" %></div>
          <div class="col-sm-8"><%= text_area_tag :descripcion,nil, class: 'form-control input-sm', style: "width:87%;" %></div><br /><br />
		  
		  
		
	      <div class="col-sm-4"><%= label_tag nil, "Fecha Publicaci贸n #{attr_requerido}".html_safe %></div>
		  <!--<div class="col-sm-4"><%#= label_tag nil, "Fecha Publicaci贸n #{attr_requerido}".html_safe, id: "lbl-fecha" %></div>-->
		  
                <div class="col-sm-8">
                    <div class="input-group date" , style="width:26%;">
                      <%= f.text_field :fecha_publicacion, :value => @informacion.fecha_publicacion.present? ? @informacion.fecha_publicacion.strftime('%d/%m/%Y') : nil ,:size => 8, :class => 'form-control input-sm' %>
                      <span class="input-group-addon"><i class="glyphicon glyphicon-calendar"></i></span>
                    </div>
				
				</div>

          <div class="col-md-1"></div><br /><br />
          
        </div>
        
      </div>

      <div class="modal-footer" style="background:#e6e6e6;">

        <%= link_to "Cerrar", "#", class: "btn btn-default", onclick: "$('##{params[:window_id]}').modal('hide');" %> 
        <%= f.submit "Actualizar", class: "btn btn-primary", id: "btn-actualizar-informacion" %>
          
      </div>

    <% end %>

  </div>
</div>

<style type="text/css">

  /*#form-editar-informacion label, #form-editar-informacion input[type='text'] { float:left; margin-top:5px;}*/
  #form-editar-informacion label, #form-editar-informacion input[type='text'], #form-editar-informacion input[type='password'], #form-editar-informacion select , #form-editar-informacion input[type='checkbox']{ float:left; margin-top:5px;}
  #form-editar-informacion br {clear:both; }
  #form-editar-informacion label { width:200px;text-align:left;  }

</style>

<script type="text/javascript">
  aplicar_datepicker();

  setTimeout(function(){ 
    $("#titulo").focus();
  }, 1000);
  
  
  
  //------------------- RECUPERAR DATOS -------------------------//
    <% if @informacion.present? %>

    setTimeout(function(){
        $("#titulo").val('<%= @informacion.titulo %>');
        $("#descripcion").val('<%= @informacion.contenido %>');
		//$("#informacion_fecha_publicacion").val('<%#= @informacion.fecha_publicacion %>');
		


    }, 10);
    <% end %>

</script>
