<% if @usuario_ok.present? %>

   $("<div class='col-sm-12' id='msg-reset-password' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Contrase&ntilde;a actualizada exitosamente.</div>").insertBefore("#form-reset-password");
   
  $("#form_buscar_usuarios_id").val('<%= @usuario.id %>');
