<%= link_to icon_detalles_gasto, "#", id: "link-to-produccion-detalle-debito-#{produccion.produccion_id}", class: 'btn btn-danger btn-xs', title: 'Haga click para ver los detalles de gastos.', onclick: "$('.modal').html('');return false;" %>

<script type="text/javascript">

  $("#link-to-produccion-detalle-debito-<%= produccion.produccion_id %>").bind('click', function(){

    var contenido = $.trim($("#produccion-detalle-debito-<%= produccion.produccion_id %>").html());

    $(".produccion-detalle-debito").html('');

    if(contenido.length == 0){

    $(this).parent().parent().after("<tr id='produccion-detalle-debito-<%= produccion.produccion_id %>' class='produccion-detalle-debito'><td colspan='4' style='text-align:center;'><i class='fa fa-refresh fa-spin'></i> Cargando...</td></tr>")

      $.ajax({

        type: 'GET',
        url: '<%= url_for(produccion_produccion_detalle_debito_path) %>',  
        data: { produccion_id: <%= produccion.produccion_id %>},
        dataType: 'script'
        
      })

    }
    
    return false;
  })

</script>