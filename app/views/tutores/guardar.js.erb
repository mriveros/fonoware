<% if @guardado_ok %>

   $("<div class='col-sm-12' id='msg-agregar-tutor' style='color:#000;padding-top:5px;font-size:10px;background:#d6ffd6;border-radius:5px;text-align:center;'>Registrado Exitosamente.</div>").insertBefore("#form-agregar-tutor");
   
  $("#form_buscar_tutor_id").val('<%= @tutor.id %>');
  $("#form-buscar-tutor").submit();
  
  setTimeout(function(){ 
    
    $("#<%= params[:window_id]%>").modal('hide');
    swal("Guardado Exitosamente.")
    
}, 1000);


<% else %>
	swal("Error al guardar:" + "<%=j(@msg)%>")
    $("<div class='col-sm-12' id='msg-agregar-tutor' style='color:#000;padding-top:5px;font-size:10px;background: #f8dfdf;border-radius:5px;text-align:center;'><%= j(@msg) %></div>").insertBefore("#form-agregar-tutor");

<% end %>
